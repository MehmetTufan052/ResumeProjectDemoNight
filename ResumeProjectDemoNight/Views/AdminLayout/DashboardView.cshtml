@model List<ResumeProjectDemoNight.Entities.Skill>

@{
    ViewData["Title"] = "DashboardView";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Geliştirici Portfolyo Yönetim Paneli</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#6c2bee",
                        "teal-accent": "#00f5d4",
                        "background-light": "#f6f6f8",
                        "background-dark": "#161022",
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: { "DEFAULT": "0.5rem", "lg": "1rem", "xl": "1.5rem", "full": "9999px" },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">
        @@layer components {
            .glass-card {
                background: rgba(47, 35, 72, 0.4);
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.05);
            }

            .glow-purple {
                box-shadow: 0 0 15px rgba(108, 43, 238, 0.3);
            }

            .glow-teal {
                box-shadow: 0 0 15px rgba(0, 245, 212, 0.2);
            }
        }

        html, body {
            overflow-y: auto !important;
            height: auto !important;
            min-height: 100vh;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-white min-h-screen">
    <div class="layout-container flex min-h-screen grow flex-col">
        <main class="flex flex-col gap-6 p-6 lg:p-10 max-w-7xl mx-auto w-full">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="flex flex-col gap-3 rounded-xl p-6 glass-card group hover:translate-y-[-4px] transition-all">
                    <div class="flex justify-between items-start">
                        <div class="p-2 bg-primary/20 rounded-lg text-primary">
                            <span class="material-symbols-outlined">check_circle</span>
                        </div>
                        <span class="text-teal-accent text-xs font-bold px-2 py-1 bg-teal-accent/10 rounded-full">+12.5%</span>
                    </div>
                    <div>
                        <p class="text-white/60 text-sm font-medium">Tamamlanan Projeler</p>
                        <p class="text-3xl font-bold mt-1">@ViewBag.CompletedProjectsCount</p>
                    </div>
                    <div class="w-full bg-white/5 h-1.5 rounded-full overflow-hidden mt-2">
                        <div class="bg-primary h-full rounded-full glow-purple" style="width: 84%"></div>
                    </div>
                </div>
                <div class="flex flex-col gap-3 rounded-xl p-6 glass-card group hover:translate-y-[-4px] transition-all">
                    <div class="flex justify-between items-start">
                        <div class="p-2 bg-teal-accent/20 rounded-lg text-teal-accent">
                            <span class="material-symbols-outlined">deployed_code</span>
                        </div>
                        <span class="text-teal-accent text-xs font-bold px-2 py-1 bg-teal-accent/10 rounded-full">+4%</span>
                    </div>
                    <div>
                        <p class="text-white/60 text-sm font-medium">Aktif Projeler</p>
                        <p class="text-3xl font-bold mt-1">4</p>
                    </div>
                    <div class="w-full bg-white/5 h-1.5 rounded-full overflow-hidden mt-2">
                        <div class="bg-teal-accent h-full rounded-full glow-teal" style="width: 60%"></div>
                    </div>
                </div>
                <div class="flex flex-col gap-3 rounded-xl p-6 glass-card group hover:translate-y-[-4px] transition-all">
                    <div class="flex justify-between items-start">
                        <div class="p-2 bg-primary/20 rounded-lg text-primary">
                            <span class="material-symbols-outlined">mail</span>
                        </div>
                        <span class="text-primary text-xs font-bold px-2 py-1 bg-primary/10 rounded-full">+22%</span>
                    </div>
                    <div>
                        <p class="text-white/60 text-sm font-medium">Yeni Mesajlar</p>
                        <p class="text-3xl font-bold mt-1">8</p>
                    </div>
                    <div class="w-full bg-white/5 h-1.5 rounded-full overflow-hidden mt-2">
                        <div class="bg-gradient-to-r from-primary to-teal-accent h-full rounded-full" style="width: 45%"></div>
                    </div>
                </div>
                <div class="flex flex-col gap-3 rounded-xl p-6 glass-card group hover:translate-y-[-4px] transition-all">
                    <div class="flex justify-between items-start">
                        <div class="p-2 bg-white/10 rounded-lg text-white">
                            <span class="material-symbols-outlined">folder_open</span>
                        </div>
                        <span class="text-teal-accent text-xs font-bold px-2 py-1 bg-teal-accent/10 rounded-full">+18%</span>
                    </div>
                    <div>
                        <p class="text-white/60 text-sm font-medium">Toplam Projeler</p>
                        <p class="text-3xl font-bold mt-1">6</p>
                    </div>
                    <div class="w-full bg-white/5 h-1.5 rounded-full overflow-hidden mt-2">
                        <div class="bg-white/40 h-full rounded-full" style="width: 92%"></div>
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="lg:col-span-2 flex flex-col gap-6">
                    <div class="glass-card rounded-xl p-6 flex flex-col md:flex-row gap-8">
                        <div class="shrink-0">
                            <div class="size-32 rounded-2xl bg-gradient-to-br from-primary to-teal-accent p-1 glow-purple">
                                <div class="size-full rounded-xl bg-background-dark flex items-center justify-center overflow-hidden">
                                    <img class="w-full h-full object-cover" src="@ViewBag.ProfileImageUrl" />
                                </div>
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="text-lg text-white/60 font-medium mb-1">Hakkımda Özeti</h3>
                                    <h3 class="text-2xl font-bold text-white">@ViewBag.ProfileName</h3>
                                    <p class="text-primary font-medium">Full Stack Geliştirici</p>
                                </div>
                            </div>
                            <p class="text-white/70 leading-relaxed mb-6">
                                @ViewBag.Description
                            </p>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                                <div class="flex flex-col bg-white/5 p-2 rounded-lg border border-white/5">
                                    <span class="text-[10px] text-white/40 uppercase font-bold mb-1">Konum</span>
                                    <div class="flex items-center gap-1.5">
                                        <span class="material-symbols-outlined text-teal-accent text-sm">location_on</span>
                                        <span class="text-xs text-white/80">Ordu</span>
                                    </div>
                                </div>
                                <div class="flex flex-col bg-white/5 p-2 rounded-lg border border-white/5">
                                    <span class="text-[10px] text-white/40 uppercase font-bold mb-1">Deneyim</span>
                                    <div class="flex items-center gap-1.5">
                                        <span class="material-symbols-outlined text-teal-accent text-sm">work_history</span>
                                        <span class="text-xs text-white/80">1 Yıl</span>
                                    </div>
                                </div>
                                <div class="flex flex-col bg-white/5 p-2 rounded-lg border border-white/5 overflow-hidden min-w-0">
                                    <span class="text-[10px] text-white/40 uppercase font-bold mb-1">E-Posta</span>
                                    <div class="flex items-center gap-1.5 min-w-0">
                                        <span class="material-symbols-outlined text-teal-accent text-sm shrink-0">mail</span>

                                        <span class="text-xs text-white/80 truncate" title="tufan@gmail.com">
                                            tufan@gmail.com
                                        </span>
                                    </div>
                                </div>
                                <div class="flex flex-col bg-white/5 p-2 rounded-lg border border-white/5">
                                    <span class="text-[10px] text-white/40 uppercase font-bold mb-1">Telefon</span>
                                    <div class="flex items-center gap-1.5">
                                        <span class="material-symbols-outlined text-teal-accent text-sm">call</span>
                                        <span class="text-xs text-white/80">+1 234 567</span>
                                    </div>
                                </div>
                            </div>

                            <div class="flex flex-wrap gap-2">
                                @foreach (var item in Model)
                                {
                                    <span class="px-3 py-1 bg-primary/20 text-primary text-xs font-bold rounded-lg border border-primary/20">@item.SkillName</span>
                                }
                            </div>

                        </div>
                    </div>
                </div>
                <div class="lg:col-span-1">
                    <div class="glass-card rounded-xl p-6 h-full flex flex-col">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-bold">Son Aktiviteler</h3>
                            <button class="text-primary text-xs font-bold hover:underline">Tümünü Gör</button>
                        </div>
                        <div class="flex flex-col gap-6 relative flex-1">
                            <div class="absolute left-[11px] top-2 bottom-2 w-0.5 bg-white/5"></div>
                            <div class="flex gap-4 relative">
                                <div class="size-6 rounded-full bg-primary flex items-center justify-center glow-purple z-10 shrink-0">
                                    <span class="material-symbols-outlined text-[14px]">commit</span>
                                </div>
                                <div>
                                    <p class="text-sm font-semibold"><span class="text-teal-accent">Traversal</span> reposuna commit</p>
                                    <p class="text-xs text-white/50 mt-1">Kimlik doğrulama hatası giderildi</p>
                                    <p class="text-[10px] text-white/30 mt-1 uppercase tracking-wider">2 saat önce</p>
                                </div>
                            </div>
                            <div class="flex gap-4 relative">
                                <div class="size-6 rounded-full bg-teal-accent flex items-center justify-center glow-teal z-10 shrink-0">
                                    <span class="material-symbols-outlined text-[14px] text-background-dark">mail</span>
                                </div>
                                <div>
                                    <p class="text-sm font-semibold">Yeni müşteri talebi</p>
                                    <p class="text-xs text-white/50 mt-1">Portfolyo üzerinden Sarah Johnson</p>
                                    <p class="text-[10px] text-white/30 mt-1 uppercase tracking-wider">5 saat önce</p>
                                </div>
                            </div>
                            <div class="flex gap-4 relative">
                                <div class="size-6 rounded-full bg-white/20 flex items-center justify-center z-10 shrink-0">
                                    <span class="material-symbols-outlined text-[14px]">rocket_launch</span>
                                </div>
                                <div>
                                    <p class="text-sm font-semibold">Proje Canlıya Alındı</p>
                                    <p class="text-xs text-white/50 mt-1">V3 Dashboard Vercel üzerinde yayında</p>
                                    <p class="text-[10px] text-white/30 mt-1 uppercase tracking-wider">Dün</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <div class="glass-card rounded-xl p-6">
                    <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">task_alt</span> Yaklaşan Görevler
                    </h3>
                    <div class="flex flex-col gap-4">
                        <label class="flex items-center gap-4 p-3 bg-white/5 rounded-lg border border-white/5 cursor-pointer hover:bg-white/10 transition-colors">
                            <input class="w-5 h-5 rounded border-white/10 bg-white/5 text-primary focus:ring-primary focus:ring-offset-background-dark" type="checkbox" />
                            <div>
                                <p class="text-sm font-medium">Traversal Projesindeki Eksikleri Belirle</p>
                                <p class="text-xs text-white/40">Termin: Yarın</p>
                            </div>
                        </label>
                        <label class="flex items-center gap-4 p-3 bg-white/5 rounded-lg border border-white/5 cursor-pointer hover:bg-white/10 transition-colors">
                            <input checked="" class="w-5 h-5 rounded border-white/10 bg-white/5 text-primary focus:ring-primary focus:ring-offset-background-dark" type="checkbox" />
                            <div>
                                <p class="text-sm font-medium line-through text-white/40">Claude Aboneliğini Yenile</p>
                                <p class="text-xs text-white/20">Tamamlandı</p>
                            </div>
                        </label>
                        <label class="flex items-center gap-4 p-3 bg-white/5 rounded-lg border border-white/5 cursor-pointer hover:bg-white/10 transition-colors">
                            <input class="w-5 h-5 rounded border-white/10 bg-white/5 text-primary focus:ring-primary focus:ring-offset-background-dark" type="checkbox" />
                            <div>
                                <p class="text-sm font-medium">Müşteri Toplantısı - Proje X</p>
                                <p class="text-xs text-white/40">Cuma, 10:00</p>
                            </div>
                        </label>
                    </div>
                </div>
                <div class="glass-card rounded-xl p-6">
                    <h3 class="text-lg font-bold mb-6">Teknoloji Dağılımı</h3>
                    <div class="relative size-44 mx-auto">
                        <svg class="size-full transform -rotate-90" viewBox="0 0 100 100">
                            <circle class="text-white/5" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-width="10"></circle>
                            <circle class="text-teal-accent" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-dasharray="251.2" stroke-dashoffset="138.16" stroke-linecap="round" stroke-width="10"></circle>
                            <circle class="text-primary" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-dasharray="251.2" stroke-dashoffset="200" stroke-linecap="round" stroke-width="10" transform="rotate(162, 50, 50)"></circle>
                            <circle class="text-white/30" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-dasharray="251.2" stroke-dashoffset="200.96" stroke-linecap="round" stroke-width="10" transform="rotate(288, 50, 50)"></circle>
                        </svg>
                        <div class="absolute inset-0 flex flex-col items-center justify-center">
                            <span class="text-2xl font-bold">@Model.Count</span>
                            <span class="text-[10px] text-white/40 uppercase">Toplam Teknoloji</span>
                        </div>
                    </div>
                    <div class="flex flex-col gap-2 mt-6">
                        @foreach (var item in Model)
                        {
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <span class="@item.SkillSpanClass"></span>
                                    <span class="text-xs text-white/60">@item.SkillName</span>
                                </div>
                                <span class="text-xs font-bold text-white">@item.SkillValue%</span>
                            </div>

                        }
                    </div>

                </div>
                <div class="glass-card rounded-xl p-6">
                    <h3 class="text-lg font-bold mb-6">Performans Metrikleri</h3>
                    <div class="flex flex-col gap-6">
                        <div>
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-white/60">Proje Tamamlama</span>
                                <span class="text-primary font-bold">%94</span>
                            </div>
                            <div class="h-3 bg-white/5 rounded-full overflow-hidden">
                                <div class="h-full bg-primary glow-purple rounded-full" style="width: 94%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-white/60">Müşteri Memnuniyeti</span>
                                <span class="text-teal-accent font-bold">%98</span>
                            </div>
                            <div class="h-3 bg-white/5 rounded-full overflow-hidden">
                                <div class="h-full bg-teal-accent glow-teal rounded-full" style="width: 98%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-white/60">Yanıt Süresi</span>
                                <span class="text-white font-bold">1.2sa</span>
                            </div>
                            <div class="h-3 bg-white/5 rounded-full overflow-hidden">
                                <div class="h-full bg-gradient-to-r from-primary to-teal-accent rounded-full" style="width: 82%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

</body>
</html>


