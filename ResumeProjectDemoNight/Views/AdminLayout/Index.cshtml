@{
    Layout = null;
}

<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#197fe6",
                        "background-light": "#f6f7f8",
                        "background-dark": "#181818",
                        "sidebar-dark": "#121212",
                        "card-dark": "#222222",
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .sidebar-item-active {
            background-color: rgba(25, 127, 230, 0.1);
            border-right: 3px solid #197fe6;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24;
            color: #2dd4bf; /* Teal-colored outline icons */
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 flex min-h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="w-64 bg-sidebar-dark border-r border-slate-800 flex flex-col fixed inset-y-0 left-0 z-50">
        <div class="p-6 flex items-center gap-3">
            <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
                <span class="material-symbols-outlined text-white" style="color: white;">terminal</span>
            </div>
            <div>
                <h1 class="text-white text-lg font-bold leading-tight">Admin Panel</h1>
                <p class="text-slate-500 text-xs">Portfolio Yönetimi</p>
            </div>
        </div>
        <nav class="flex-1 overflow-y-auto px-3 py-4 space-y-1 custom-scrollbar">
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/AdminLayout/DashboardView">
                <span class="material-symbols-outlined">dashboard</span>
                <span class="text-sm font-medium">Dashboard</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/About/Index">
                <span class="material-symbols-outlined">person</span>
                <span class="text-sm font-medium">Hakkımda</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Experience/ExperienceList">
                <span class="material-symbols-outlined">work</span>
                <span class="text-sm font-medium">Deneyimler</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Service/Index">
                <span class="material-symbols-outlined">
                    design_services
                </span>
                <span class="text-sm font-medium">Hizmetlerim</span>
            </a>


            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Education/Index">
                <span class="material-symbols-outlined">school</span>
                <span class="text-sm font-medium">Eğitimler</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Skill/Index">
                <span class="material-symbols-outlined">code</span>
                <span class="text-sm font-medium">Yetenekler</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg
           text-slate-400 hover:text-white hover:bg-slate-800 transition-colors"
               href="/Portfolio/PortfolioList">
                <span class="material-symbols-outlined">layers</span>
                <span class="text-sm font-medium">Projelerim</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Testimonial/ListTestimonials">
                <span class="material-symbols-outlined">forum</span>
                <span class="text-sm font-medium">Referanslar</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/Message/MessageList">
                <span class="material-symbols-outlined">mail</span>
                <span class="text-sm font-medium">Mesajlar</span>
            </a>
            <a class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="/SocialMedia/Index">
                <span class="material-symbols-outlined">
                    share
                </span>
                <span class="text-sm font-medium">Sosyal Medya</span>
            </a>



        </nav>
        <div class="p-4 border-t border-slate-800 space-y-1">
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="#">
                <span class="material-symbols-outlined">settings</span>
                <span class="text-sm font-medium">Siteye Git</span>
            </a>
        </div>
    </aside>
    <!-- Main Content -->
    <main class="ml-64 flex-1 flex flex-col h-screen">
        <!-- Top Navbar -->
        @await Component.InvokeAsync("_DefaultHeaderComponentPartial")
        <!-- Scrollable Area -->
        @RenderBody()
    </main>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const links = document.querySelectorAll(".sidebar-link");
            const currentPath = window.location.pathname.toLowerCase();

            links.forEach(link => {
                const href = link.getAttribute("href").toLowerCase();

                if (currentPath === href || currentPath.startsWith(href + "/")) {
                    link.classList.add("sidebar-item-active", "text-white");
                    link.classList.remove("text-slate-400");
                }
            });
        });
    </script>

</body>
</html>