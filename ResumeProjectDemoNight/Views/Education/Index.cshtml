@model List<ResumeProjectDemoNight.Entities.Education>

@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Eğitim Bilgilerim</h3>
                <p class="text-slate-400 text-sm mt-1">Eğitim geçmişinizi bu sayfadan yönetebilirsiniz.</p>
            </div>
            <a href="/Education/CreateEducation/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Eğitim Ekle
            </a>
        </div>

        <!-- Education Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl hover:border-primary/50 transition-all flex flex-col">
                    <!-- Education Header -->
                    <div class="relative bg-gradient-to-br from-primary/20 to-primary/5 p-6 border-b border-slate-800">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-3">
                                    <div class="size-10 bg-primary/20 rounded-lg flex items-center justify-center">
                                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">school</span>
                                    </div>
                                    <span class="text-xs font-semibold text-primary uppercase tracking-wider">Eğitim #@item.EducationID</span>
                                </div>
                                <h4 class="text-white font-bold text-xl mb-2 line-clamp-2">
                                    @if (!string.IsNullOrEmpty(item.SchoolName))
                                    {
                                        @item.SchoolName
                                    }
                                    else
                                    {
                                        <span class="text-slate-500 italic">Okul adı girilmemiş</span>
                                    }
                                </h4>
                                <div class="flex items-center gap-2 text-slate-400">
                                    <span class="material-symbols-outlined" style="font-size: 16px;">calendar_month</span>
                                    <span class="text-sm font-medium">
                                        @if (!string.IsNullOrEmpty(item.EducationPeriodDate))
                                        {
                                            @item.EducationPeriodDate
                                        }
                                        else
                                        {
                                            <span class="italic">Tarih girilmemiş</span>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Education Content -->
                    <div class="p-6 flex-1 flex flex-col">
                        <p class="text-slate-400 text-sm line-clamp-4 mb-4 flex-1">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description
                            }
                            else
                            {
                                <span class="italic">Açıklama girilmemiş</span>
                            }
                        </p>
                    </div>
                   
                </div>
            }
        </div>

        @if (Model.Count == 0)
        {
            <!-- Empty State -->
            <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl p-12">
                <div class="text-center">
                    <div class="size-20 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-slate-600" style="font-size: 48px;">school</span>
                    </div>
                    <h4 class="text-xl font-bold text-white mb-2">Henüz Eğitim Bilgisi Eklenmemiş</h4>
                    <p class="text-slate-400 mb-6">Eğitim geçmişinizi eklemek için "Yeni Eğitim Ekle" butonuna tıklayın.</p>
                    <a href="/Education/CreateEducation/" class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                        İlk Eğitimi Ekle
                    </a>
                </div>
            </div>
        }

        <!-- Statistics Card -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Toplam Eğitim</p>
                        <p class="text-2xl font-bold text-white">@Model.Count</p>
                    </div>
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">school</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Tamamlanmış</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(e => !string.IsNullOrEmpty(e.SchoolName) && !string.IsNullOrEmpty(e.Description))</p>
                    </div>
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400" style="font-size: 24px;">check_circle</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Eksik Bilgi</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(e => string.IsNullOrEmpty(e.SchoolName) || string.IsNullOrEmpty(e.Description))</p>
                    </div>
                    <div class="size-12 bg-orange-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-orange-400" style="font-size: 24px;">warning</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">Bilgilendirme</h4>
                    <p class="text-xs text-slate-400">
                        Eğitim bilgileriniz portföy sitenizde ziyaretçilerinize gösterilecektir.
                        Her eğitim için okul adı, eğitim dönemi ve açıklama eklemeyi unutmayın.
                        Eğitim dönemini belirtirken format: "Eylül 2015 - Haziran 2019" şeklinde kullanın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>