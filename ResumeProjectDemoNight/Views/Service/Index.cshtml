@model List<ResumeProjectDemoNight.Entities.Service>

@{
    ViewData["Title"] = "ServicesList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Hizmetlerim</h3>
                <p class="text-slate-400 text-sm mt-1">Sunduğunuz hizmetleri bu sayfadan yönetebilirsiniz.</p>
            </div>
            <a href="/Service/CreateService/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Hizmet Ekle
            </a>
        </div>

        <!-- Services Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl hover:border-primary/50 transition-all flex flex-col">
                    <!-- Service Image -->
                    <div class="relative h-48 bg-slate-900 overflow-hidden">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl"
                                 alt="@item.Title"
                                 class="w-full h-full object-cover"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            <div class="hidden w-full h-full items-center justify-center bg-slate-800">
                                <span class="material-symbols-outlined text-slate-600" style="font-size: 64px;">design_services</span>
                            </div>
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center bg-slate-800">
                                <span class="material-symbols-outlined text-slate-600" style="font-size: 64px;">design_services</span>
                            </div>
                        }
                        <div class="absolute top-3 right-3">
                            <div class="size-10 bg-primary/90 backdrop-blur-sm rounded-lg flex items-center justify-center">
                                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">design_services</span>
                            </div>
                        </div>
                    </div>

                    <!-- Service Content -->
                    <div class="p-6 flex-1 flex flex-col">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-xs font-semibold text-primary uppercase tracking-wider">Hizmet #@item.ServiceId</span>
                        </div>
                        <h4 class="text-white font-bold text-lg mb-3 line-clamp-2">
                            @if (!string.IsNullOrEmpty(item.Title))
                            {
                                @item.Title
                            }
                            else
                            {
                                <span class="text-slate-500 italic">Başlık girilmemiş</span>
                            }
                        </h4>
                        <p class="text-slate-400 text-sm line-clamp-3 mb-4 flex-1">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description
                            }
                            else
                            {
                                <span class="italic">Açıklama girilmemiş</span>
                            }
                        </p>
                    </div>

                    <!-- Service Actions -->
                    <div class="px-6 py-4 bg-slate-900/30 border-t border-slate-800 flex items-center justify-between gap-2">
                        <span class="text-xs text-slate-500">
                            @(string.IsNullOrEmpty(item.Title) || string.IsNullOrEmpty(item.Description) ? "Eksik Bilgi" : "Tamamlandı")
                        </span>
                        <div class="flex gap-2">
                            <a href="/Service/UpdateService/@item.ServiceId"
                               class="p-2 text-slate-400 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                            </a>
                            <a href="/Service/DeleteService/@item.ServiceId"
                               class="p-2 text-slate-400 hover:text-red-400 transition-colors">
                                <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Count == 0)
        {
            <!-- Empty State -->
            <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl p-12">
                <div class="text-center">
                    <div class="size-20 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-slate-600" style="font-size: 48px;">design_services</span>
                    </div>
                    <h4 class="text-xl font-bold text-white mb-2">Henüz Hizmet Eklenmemiş</h4>
                    <p class="text-slate-400 mb-6">Sunduğunuz hizmetleri eklemek için "Yeni Hizmet Ekle" butonuna tıklayın.</p>
                    <a href="/Service/CreateService/" class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                        İlk Hizmeti Ekle
                    </a>
                </div>
            </div>
        }

        <!-- Statistics Card -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Toplam Hizmet</p>
                        <p class="text-2xl font-bold text-white">@Model.Count</p>
                    </div>
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">design_services</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Tamamlanmış</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(s => !string.IsNullOrEmpty(s.Title) && !string.IsNullOrEmpty(s.Description))</p>
                    </div>
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400" style="font-size: 24px;">check_circle</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Eksik Bilgi</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(s => string.IsNullOrEmpty(s.Title) || string.IsNullOrEmpty(s.Description))</p>
                    </div>
                    <div class="size-12 bg-orange-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-orange-400" style="font-size: 24px;">warning</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">Bilgilendirme</h4>
                    <p class="text-xs text-slate-400">
                        Hizmetleriniz portföy sitenizde ziyaretçilerinize gösterilecektir.
                        Her hizmet için açıklayıcı bir başlık, detaylı açıklama ve görsel eklemeyi unutmayın.
                        Görseller için tam URL adresi kullanın (https:// ile başlayan).
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>