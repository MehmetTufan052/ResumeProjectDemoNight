@model ResumeProjectDemoNight.Entities.Portfolio

@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Proje Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Portfolyonuza yeni bir proje eklemek için aşağıdaki formu doldurun.</p>
            </div>
            <a href="/Portfolio/PortfolioList/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <!-- Project Title -->
                    <div class="space-y-2">
                        <label for="ProjectTitle" class="block text-sm font-semibold text-slate-300">
                            Proje Başlığı
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">work</span>
                            <input type="text"
                                   id="ProjectTitle"
                                   name="ProjectTitle"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: E-Ticaret Platformu, Mobil Bankacılık Uygulaması"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Projeniz için çekici ve açıklayıcı bir başlık girin.</p>
                    </div>

                    <!-- Image URL -->
                    <div class="space-y-2">
                        <label for="ImageUrl" class="block text-sm font-semibold text-slate-300">
                            Proje Görseli URL
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">image</span>
                            <input type="url"
                                   id="ImageUrl"
                                   name="ImageUrl"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="https://example.com/project-image.jpg"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Projenizi en iyi temsil eden görselin URL adresini girin.</p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Projeyi Kaydet
                        </button>
                        <a href="/Portfolio/PortfolioList/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
                <div class="flex gap-3">
                    <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">photo_camera</span>
                    <div class="flex-1">
                        <h4 class="text-sm font-semibold text-blue-400 mb-1">Görsel İpuçları</h4>
                        <p class="text-xs text-slate-400">
                            Projenizi en iyi şekilde temsil eden, yüksek kaliteli bir görsel kullanın.
                            Ekran görüntüleri, mockup'lar veya ürün görselleri ideal seçimlerdir.
                            Önerilen boyut: 1200x800 piksel veya 3:2 oran.
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-primary/10 border border-primary/20 rounded-lg p-4">
                <div class="flex gap-3">
                    <span class="material-symbols-outlined text-primary" style="font-size: 24px;">lightbulb</span>
                    <div class="flex-1">
                        <h4 class="text-sm font-semibold text-primary mb-1">Başlık İpuçları</h4>
                        <p class="text-xs text-slate-400">
                            Proje başlığınız kısa, öz ve akılda kalıcı olmalı.
                            Projenin ne yaptığını veya hangi sektöre ait olduğunu net bir şekilde belirtin.
                            Gereksiz teknik terimlerden kaçının.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Preview Section -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="px-6 py-4 border-b border-slate-800">
                <h4 class="text-lg font-bold text-white flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary" style="font-size: 24px;">visibility</span>
                    Portfolyo Kartı Önizleme
                </h4>
                <p class="text-xs text-slate-500 mt-1">Projenizin portfolyo sayfanızda nasıl görüneceğini aşağıda görebilirsiniz.</p>
            </div>
            <div class="p-8">
                <div class="max-w-sm mx-auto">
                    <div class="bg-slate-900 rounded-xl border border-slate-700 overflow-hidden shadow-xl">
                        <div class="relative h-48 bg-slate-800 flex items-center justify-center">
                            <span class="material-symbols-outlined text-slate-600" style="font-size: 64px;">image</span>
                            <div class="absolute top-3 right-3">
                                <div class="size-10 bg-primary/90 backdrop-blur-sm rounded-lg flex items-center justify-center">
                                    <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">work</span>
                                </div>
                            </div>
                        </div>
                        <div class="p-6">
                            <h4 class="text-white font-bold text-lg mb-2">Proje Başlığınız</h4>
                            <p class="text-slate-500 text-sm italic">Görsel önizlemesi</p>
                        </div>
                        <div class="px-6 py-4 bg-slate-900/50 border-t border-slate-700 flex items-center justify-between">
                            <span class="text-xs text-slate-500">Tamamlandı</span>
                            <div class="flex gap-2">
                                <button class="p-2 text-slate-400">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                </button>
                                <button class="p-2 text-slate-400">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>