<header class="h-16 border-b border-slate-800 bg-background-dark/80 backdrop-blur-md flex items-center justify-between px-8 sticky top-0 z-40">
    <div class="flex items-center gap-4">
        <h2 class="text-white text-lg font-bold leading-tight tracking-tight">Genel Bakış</h2>
    </div>
    <div class="flex items-center gap-6">
        <div class="flex items-center gap-3 flex-row-reverse">
            <a href="/Message/MessageList?filter=unread" class="relative p-2 text-slate-400 hover:text-white transition-colors group" title="Okunmamış Mesajlar">
                <span class="material-symbols-outlined">mail</span>
                @if (ViewBag.UnreadMessageCount > 0)
                {
                    <span class="absolute -top-1 -right-1 size-5 bg-primary text-white text-[10px] font-bold rounded-full border-2 border-background-dark flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform glow-purple">
                        @ViewBag.UnreadMessageCount
                    </span>
                }
            </a>

            <a href="/Portfolio/PortfolioList" class="relative p-2 text-slate-400 hover:text-white transition-colors group" title="Toplam Projeler">
                <span class="material-symbols-outlined">folder_open</span>
                <span class="absolute -top-1 -right-1 size-5 bg-teal-accent text-background-dark text-[10px] font-bold rounded-full border-2 border-background-dark flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
                    @ViewBag.TotalProjectsCount
                </span>
            </a>

            <div class="h-8 w-[1px] bg-slate-800 mx-2"></div>
        </div>

        <div class="flex items-center gap-3">
            <div class="text-right">
                <p class="text-white text-sm font-bold">Yönetici</p>
                <p class="text-slate-500 text-xs">Tam Yetki</p>
            </div>
            <div class="size-10 rounded-full border-2 border-primary/30 p-0.5">
                <div class="h-full w-full rounded-full bg-center bg-no-repeat bg-cover" style='background-image: url("@ViewBag.ProfileImageUrl");'></div>
            </div>
        </div>
    </div>
</header>