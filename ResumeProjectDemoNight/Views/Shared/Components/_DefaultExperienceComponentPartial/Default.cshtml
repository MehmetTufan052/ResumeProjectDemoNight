@model ExperienceVM

<section id="experience">
	<div class="container">
		<!-- section title -->
		<h2 class="section-title wow fadeInUp">Deneyimlerim</h2>
		<div class="spacer" data-height="60"></div>
		<div class="row">
			<div class="col-md-6">
				<!-- timeline wrapper - EĞİTİM -->
				<div class="timeline edu bg-white rounded shadow-dark padding-30 overflow-hidden" style="min-height: 400px;">
					@foreach (var item in Model.Educations)
					{
						<!-- timeline item -->
						<div class="timeline-container wow fadeInUp" style="margin-bottom: 30px;">
							<div class="content">
								<span class="time">@item.EducationPeriodDate</span>
								<h3 class="title">@item.SchoolName</h3>
								<p>@item.Description</p>
							</div>
						</div>
					}
					<!-- main line -->
					<span class="line"></span>
				</div>
			</div>

			<div class="col-md-6">
				<!-- responsive spacer -->
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
				<!-- timeline wrapper - İŞ DENEYİMİ -->
				<div class="timeline exp bg-white rounded shadow-dark padding-30 overflow-hidden" style="min-height: 400px;">
					@foreach (var item in Model.Experiences)
					{
						<!-- timeline item -->
						<div class="timeline-container wow fadeInUp" style="margin-bottom: 30px;">
							<div class="content">
								<span class="time">@item.WorkPeriodDate</span>
								<h3 class="title">@item.Title</h3>
								<p>@item.Description</p>
							</div>
						</div>
					}
					<!-- main line -->
					<span class="line"></span>
				</div>
			</div>
		</div>
	</div>
</section>