@model DefaultAboutVM

<section id="about">
    <div class="container">
        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hakkımda</h2>
        <div class="spacer" data-height="60"></div>

        @foreach (var item in Model.Abouts2)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center text-md-left">
                        <!-- avatar image -->
                        <img src="@item.ImageUrl" alt="Bolby" style="max-width: 250px; height: auto;" />
                    </div>
                    <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                </div>

                <div class="col-md-9 triangle-left-md triangle-top-sm">
                    <div class="rounded bg-white shadow-dark padding-30">
                        <div class="row">
                            <div class="col-md-6">
                                <!-- about text -->
                                <p>@item.Description</p>
                                <div class="mt-3">
                                    <a href="#" class="btn btn-default">Download CV</a>
                                </div>
                                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                            </div>

                            <div class="col-md-6">
                                @foreach (var skill in Model.Skills)
                                {
                                    <!-- skill item -->
                                    <div class="skill-item">
                                        <div class="skill-info clearfix">
                                            <h4 class="float-left mb-3 mt-0">@skill.SkillName</h4>
                                            <span class="float-right">@skill.SkillValue%</span>
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar data-background"
                                                 role="progressbar"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 aria-valuenow="@skill.SkillValue"
                                                 data-color="@skill.SkillColor">
                                            </div>
                                        </div>
                                        <div class="spacer" data-height="20"></div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- row end -->
        <div class="spacer" data-height="70"></div>

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-fire"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">198</em></h3>
                        <p class="mb-0">Projects completed</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-cup"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">5670</em></h3>
                        <p class="mb-0">Cup of coffee</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-people"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">427</em></h3>
                        <p class="mb-0">Satisfied clients</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="fact-item">
                    <span class="icon icon-badge"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">35</em></h3>
                        <p class="mb-0">Nominees winner</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
