@model ResumeProjectDemoNight.Entities.Skill

@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">

        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Yetenek Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Yetenek portföyünüze yeni bir beceri ekleyin.</p>
            </div>
            <a href="/Skill/SkillsList/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Listeye Dön
            </a>
        </div>

        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form asp-action="CreateSkill" method="post" class="space-y-6">

                    <div class="space-y-2">
                        <label asp-for="SkillName" class="block text-sm font-semibold text-slate-300">
                            Yetenek Adı
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">code</span>
                            <input type="text"
                                   asp-for="SkillName"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: C#, JavaScript, React, Photoshop"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500">Yeteneğinizin ismini kısa ve net bir şekilde yazın.</p>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="SkillValue" class="block text-sm font-semibold text-slate-300">
                            Yeterlilik Seviyesi (%)
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">trending_up</span>
                            <input type="number"
                                   asp-for="SkillValue"
                                   min="0"
                                   max="100"
                                   id="skillValueInput"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="0 - 100 arası bir değer girin"
                                   oninput="updateSkillPreview(this.value)"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500">0 ile 100 arasında bir değer girin. (0: Başlangıç, 100: Uzman)</p>
                    </div>

                    <!-- Live Preview -->
                    <div class="space-y-3 p-6 bg-slate-900/50 rounded-lg border border-slate-700">
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-sm font-semibold text-slate-300">Canlı Önizleme</span>
                            <span id="previewValue" class="text-2xl font-bold text-primary">0%</span>
                        </div>
                        <div class="w-full bg-slate-800 rounded-full h-4 overflow-hidden">
                            <div id="previewBar" class="h-full bg-gradient-to-r from-primary to-primary/70 rounded-full transition-all duration-300" style="width: 0%"></div>
                        </div>
                        <div class="flex justify-between text-xs text-slate-500">
                            <span>Başlangıç</span>
                            <span>Orta</span>
                            <span>İleri</span>
                            <span>Uzman</span>
                        </div>
                        <div class="text-center">
                            <span id="levelBadge" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border bg-slate-500/10 text-slate-400 border-slate-500/20">
                                <span class="material-symbols-outlined" style="font-size: 16px;">rocket_launch</span>
                                <span class="text-sm font-semibold">Başlangıç</span>
                            </span>
                        </div>
                    </div>

                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Yeteneği Kaydet
                        </button>
                        <a href="/Skill/SkillsList/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Skill Level Guide -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-slate-500/10 border border-slate-500/20 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-slate-400" style="font-size: 20px;">rocket_launch</span>
                    <h5 class="text-sm font-bold text-slate-300">Başlangıç</h5>
                </div>
                <p class="text-xs text-slate-500">0-49% arasındaki değerler başlangıç seviyesi olarak gösterilir.</p>
            </div>

            <div class="bg-yellow-500/10 border border-yellow-500/20 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-yellow-400" style="font-size: 20px;">thumb_up</span>
                    <h5 class="text-sm font-bold text-yellow-300">Orta Seviye</h5>
                </div>
                <p class="text-xs text-slate-500">50-69% arasındaki değerler orta seviye olarak gösterilir.</p>
            </div>

            <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-blue-400" style="font-size: 20px;">star</span>
                    <h5 class="text-sm font-bold text-blue-300">İleri Seviye</h5>
                </div>
                <p class="text-xs text-slate-500">70-89% arasındaki değerler ileri seviye olarak gösterilir.</p>
            </div>

            <div class="bg-green-500/10 border border-green-500/20 rounded-lg p-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-green-400" style="font-size: 20px;">workspace_premium</span>
                    <h5 class="text-sm font-bold text-green-300">Uzman</h5>
                </div>
                <p class="text-xs text-slate-500">90-100% arasındaki değerler uzman seviye olarak gösterilir.</p>
            </div>
        </div>

        <div class="bg-primary/10 border border-primary/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-primary" style="font-size: 24px;">lightbulb</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-primary mb-1">Küçük Bir Tavsiye</h4>
                    <p class="text-xs text-slate-400">
                        Yetenek seviyenizi belirlerken gerçekçi olun. Portföyünüz güvenilirlik açısından dürüst bir yaklaşım gerektirir.
                        Ayrıca en güçlü olduğunuz yetenekleri üst sıralara eklemeniz önerilir.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateSkillPreview(value) {
        value = Math.max(0, Math.min(100, parseInt(value) || 0));

        const previewBar = document.getElementById('previewBar');
        const previewValue = document.getElementById('previewValue');
        const levelBadge = document.getElementById('levelBadge');

        previewBar.style.width = value + '%';
        previewValue.textContent = value + '%';

        let levelText = '';
        let levelColor = '';
        let levelIcon = '';

        if (value >= 90) {
            levelText = 'Uzman';
            levelColor = 'bg-green-500/10 text-green-400 border-green-500/20';
            levelIcon = 'workspace_premium';
        } else if (value >= 70) {
            levelText = 'İleri Seviye';
            levelColor = 'bg-blue-500/10 text-blue-400 border-blue-500/20';
            levelIcon = 'star';
        } else if (value >= 50) {
            levelText = 'Orta Seviye';
            levelColor = 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20';
            levelIcon = 'thumb_up';
        } else {
            levelText = 'Başlangıç';
            levelColor = 'bg-slate-500/10 text-slate-400 border-slate-500/20';
            levelIcon = 'rocket_launch';
        }

        levelBadge.className = 'inline-flex items-center gap-2 px-4 py-2 rounded-lg border ' + levelColor;
        levelBadge.innerHTML = `
            <span class="material-symbols-outlined" style="font-size: 16px;">${levelIcon}</span>
            <span class="text-sm font-semibold">${levelText}</span>
        `;
    }
</script>