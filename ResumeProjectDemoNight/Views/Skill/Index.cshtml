@model List<ResumeProjectDemoNight.Entities.Skill>

@{
    ViewData["Title"] = "SkillsList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeteneklerim</h3>
                <p class="text-slate-400 text-sm mt-1">Yeteneklerinizi ve yeterlilik seviyelerinizi bu sayfadan yönetebilirsiniz.</p>
            </div>
            <a href="/Skill/CreateSkill/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Yetenek Ekle
            </a>
        </div>

        <!-- Skills Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl hover:border-primary/50 transition-all">
                    <div class="p-6">
                        <!-- Skill Header -->
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center gap-3">
                                <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                                    <span class="material-symbols-outlined text-primary" style="font-size: 24px;">code</span>
                                </div>
                                <div>
                                    <h4 class="text-white font-bold text-lg">
                                        @if (!string.IsNullOrEmpty(item.SkillName))
                                        {
                                            @item.SkillName
                                        }
                                        else
                                        {
                                            <span class="text-slate-500 italic">Yetenek adı girilmemiş</span>
                                        }
                                    </h4>
                                    <span class="text-xs text-slate-500">Yetenek #@item.SkillId</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-3xl font-bold text-primary">@item.SkillValue%</div>
                                <span class="text-xs text-slate-500">Yeterlilik</span>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="mb-4">
                            <div class="w-full bg-slate-800 rounded-full h-3 overflow-hidden">
                                <div class="h-full bg-gradient-to-r from-primary to-primary/70 rounded-full transition-all duration-500 flex items-center justify-end pr-2"
                                     style="width: @item.SkillValue%">
                                    @if (item.SkillValue >= 15)
                                    {
                                        <span class="text-white text-[10px] font-bold">@item.SkillValue%</span>
                                    }
                                </div>
                            </div>
                            <div class="flex justify-between mt-2 text-xs text-slate-500">
                                <span>Başlangıç</span>
                                <span>Orta</span>
                                <span>İleri</span>
                                <span>Uzman</span>
                            </div>
                        </div>

                        <!-- Skill Level Badge -->
                        <div class="flex items-center justify-between mb-4">
                            @{
                                string levelText = "";
                                string levelColor = "";
                                string levelIcon = "";

                                if (item.SkillValue >= 90)
                                {
                                    levelText = "Uzman";
                                    levelColor = "bg-green-500/10 text-green-400 border-green-500/20";
                                    levelIcon = "workspace_premium";
                                }
                                else if (item.SkillValue >= 70)
                                {
                                    levelText = "İleri Seviye";
                                    levelColor = "bg-blue-500/10 text-blue-400 border-blue-500/20";
                                    levelIcon = "star";
                                }
                                else if (item.SkillValue >= 50)
                                {
                                    levelText = "Orta Seviye";
                                    levelColor = "bg-yellow-500/10 text-yellow-400 border-yellow-500/20";
                                    levelIcon = "thumb_up";
                                }
                                else
                                {
                                    levelText = "Başlangıç";
                                    levelColor = "bg-slate-500/10 text-slate-400 border-slate-500/20";
                                    levelIcon = "rocket_launch";
                                }
                            }
                            <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg border @levelColor">
                                <span class="material-symbols-outlined" style="font-size: 16px;">@levelIcon</span>
                                <span class="text-xs font-semibold">@levelText</span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center justify-between pt-4 border-t border-slate-800">
                            <span class="text-xs text-slate-500">
                                @(string.IsNullOrEmpty(item.SkillName) || item.SkillValue == 0 ? "Eksik Bilgi" : "Tamamlandı")
                            </span>
                          
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Count == 0)
        {
            <!-- Empty State -->
            <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl p-12">
                <div class="text-center">
                    <div class="size-20 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-outlined text-slate-600" style="font-size: 48px;">code</span>
                    </div>
                    <h4 class="text-xl font-bold text-white mb-2">Henüz Yetenek Eklenmemiş</h4>
                    <p class="text-slate-400 mb-6">Yeteneklerinizi ve yeterlilik seviyelerinizi eklemek için "Yeni Yetenek Ekle" butonuna tıklayın.</p>
                    <a href="/Skill/CreateSkill/" class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                        İlk Yeteneği Ekle
                    </a>
                </div>
            </div>
        }

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Toplam Yetenek</p>
                        <p class="text-2xl font-bold text-white">@Model.Count</p>
                    </div>
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">code</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Uzman Seviye</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(s => s.SkillValue >= 90)</p>
                    </div>
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400" style="font-size: 24px;">workspace_premium</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">İleri Seviye</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(s => s.SkillValue >= 70 && s.SkillValue < 90)</p>
                    </div>
                    <div class="size-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">star</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Ortalama Seviye</p>
                        <p class="text-2xl font-bold text-white">
                            @(Model.Count > 0 ? Math.Round(Model.Average(s => s.SkillValue), 0) : 0)%
                        </p>
                    </div>
                    <div class="size-12 bg-yellow-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-yellow-400" style="font-size: 24px;">analytics</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">Bilgilendirme</h4>
                    <p class="text-xs text-slate-400">
                        Yetenekleriniz portföy sitenizde ziyaretçilerinize gösterilecektir.
                        Her yetenek için gerçekçi bir yüzde değeri girin (0-100 arası).
                        <strong>0-49: Başlangıç</strong>, <strong>50-69: Orta</strong>, <strong>70-89: İleri</strong>, <strong>90-100: Uzman</strong> olarak değerlendirilir.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>