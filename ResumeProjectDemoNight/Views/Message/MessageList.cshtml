@model List<ResumeProjectDemoNight.Entities.Message>

@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-7xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Mesajlar</h3>
                <p class="text-slate-400 text-sm mt-1">Gelen mesajlarınızı buradan yönetebilirsiniz.</p>
            </div>
            <div class="flex items-center gap-3">
                <span class="px-4 py-2 bg-primary/10 text-primary rounded-lg text-sm font-semibold">
                    @Model.Count(m => !m.IsRead) Okunmadı
                </span>
            </div>
        </div>

        <!-- Messages Table Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <!-- Scrollable Table Container -->
            <div class="overflow-x-auto max-h-[calc(100vh-300px)] overflow-y-auto">
                <table class="w-full text-left border-collapse">
                    <thead class="sticky top-0 z-10 bg-slate-900/95 backdrop-blur-sm">
                        <tr class="border-b border-slate-800">
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Gönderen</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">E-posta</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Konu</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Tarih</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Durum</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">İşlem</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-800/30 transition-colors group @(item.IsRead ? "" : "bg-primary/5")">
                                <td class="px-6 py-5">
                                    <span class="text-slate-300 font-medium">@item.MessageId</span>
                                </td>
                                <td class="px-6 py-5">
                                    <div class="flex items-center gap-3">
                                        <div class="size-10 bg-primary/10 rounded-full flex items-center justify-center">
                                            <span class="material-symbols-outlined text-primary" style="font-size: 20px;">person</span>
                                        </div>
                                        <span class="text-slate-300 font-medium">@item.NameSurname</span>
                                    </div>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-400 text-sm">@item.Email</span>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-300 text-sm font-medium">@item.Subject</span>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-400 text-xs">@item.SendDate.ToString("dd.MM.yyyy HH:mm")</span>
                                </td>
                                <td class="px-6 py-5">
                                    @if (item.IsRead)
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-slate-700 text-slate-300 rounded-lg text-xs font-medium">
                                            <span class="material-symbols-outlined" style="font-size: 14px;">mark_email_read</span>
                                            Okundu
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 bg-primary text-white rounded-lg text-xs font-medium">
                                            <span class="material-symbols-outlined" style="font-size: 14px;">mark_email_unread</span>
                                            Yeni
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-5">
                                    <div class="flex items-center gap-2">
                                        <a href="/Message/UpdateMessage/@item.MessageId"
                                           class="p-2 text-slate-400 hover:text-primary transition-colors"
                                           title="Görüntüle">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">visibility</span>
                                        </a>
                                        <a href="/Message/DeleteMessage/@item.MessageId"
                                           class="p-2 text-slate-400 hover:text-red-400 transition-colors"
                                           title="Sil">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 bg-slate-900/30 flex items-center justify-between border-t border-slate-800">
                <span class="text-slate-500 text-xs font-medium uppercase tracking-wider">
                    Toplam @Model.Count Mesaj • @Model.Count(m => !m.IsRead) Okunmadı
                </span>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Toplam Mesaj</p>
                        <p class="text-2xl font-bold text-white">@Model.Count</p>
                    </div>
                    <div class="size-12 bg-primary/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">mail</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Okunmadı</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(m => !m.IsRead)</p>
                    </div>
                    <div class="size-12 bg-blue-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">mark_email_unread</span>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-slate-800 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-slate-500 text-sm font-semibold mb-1">Okundu</p>
                        <p class="text-2xl font-bold text-white">@Model.Count(m => m.IsRead)</p>
                    </div>
                    <div class="size-12 bg-green-500/10 rounded-lg flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400" style="font-size: 24px;">mark_email_read</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>