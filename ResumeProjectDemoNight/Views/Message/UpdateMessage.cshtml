@model ResumeProjectDemoNight.Entities.Message

@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Mesaj Güncelle</h3>
                <p class="text-slate-400 text-sm mt-1">Mesaj bilgilerini güncellemek için aşağıdaki formu doldurun.</p>
            </div>
            <a href="/Message/MessageList/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="MessageId" />

                    <!-- Name Surname -->
                    <div class="space-y-2">
                        <label for="NameSurname" class="block text-sm font-semibold text-slate-300">
                            Ad Soyad
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">person</span>
                            <input type="text"
                                   id="NameSurname"
                                   asp-for="NameSurname"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Ahmet Yılmaz"
                                   required />
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="space-y-2">
                        <label for="Email" class="block text-sm font-semibold text-slate-300">
                            E-posta
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">mail</span>
                            <input type="email"
                                   id="Email"
                                   asp-for="Email"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: ahmet@example.com"
                                   required />
                        </div>
                    </div>

                    <!-- Subject -->
                    <div class="space-y-2">
                        <label for="Subject" class="block text-sm font-semibold text-slate-300">
                            Konu
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">subject</span>
                            <input type="text"
                                   id="Subject"
                                   asp-for="Subject"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Proje Teklifi"
                                   required />
                        </div>
                    </div>

                    <!-- Message Detail -->
                    <div class="space-y-2">
                        <label for="MessageDetail" class="block text-sm font-semibold text-slate-300">
                            Mesaj İçeriği
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-4 material-symbols-outlined text-slate-500" style="font-size: 20px;">description</span>
                            <textarea id="MessageDetail"
                                      asp-for="MessageDetail"
                                      rows="6"
                                      class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                                      placeholder="Mesaj içeriğini buraya yazın..."
                                      required></textarea>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Mesajın detaylarını yazın.</p>
                    </div>

                    <!-- IsRead Checkbox -->
                    <div class="space-y-2">
                        <label class="flex items-center gap-3 cursor-pointer">
                            <input type="checkbox"
                                   asp-for="IsRead"
                                   class="w-5 h-5 rounded border-slate-700 bg-slate-900/50 text-primary focus:ring-2 focus:ring-primary focus:ring-offset-0 focus:ring-offset-slate-900 cursor-pointer" />
                            <span class="text-sm font-semibold text-slate-300">Okundu olarak işaretle</span>
                        </label>
                        <p class="text-xs text-slate-500 ml-8">Mesajın okunup okunmadığını belirtir.</p>
                    </div>

                    <!-- Send Date -->
                    <div class="space-y-2">
                        <label for="SendDate" class="block text-sm font-semibold text-slate-300">
                            Gönderim Tarihi
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">schedule</span>
                            <input type="datetime-local"
                                   id="SendDate"
                                   asp-for="SendDate"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Mesajın gönderilme tarih ve saatini belirtin.</p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Mesajı Kaydet
                        </button>
                        <a href="/Message/MessageList/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Help Card -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">İpucu</h4>
                    <p class="text-xs text-slate-400">
                        Mesaj bilgilerini güncellerken tüm alanların doğru doldurulduğundan emin olun.
                        Mesajı okundu olarak işaretlemek için ilgili kutucuğu işaretleyebilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

