@model ResumeProjectDemoNight.Entities.Testimonial

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Referans Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Referans eklemek için aşağıdaki formu doldurun.</p>
            </div>
            <a href="/Testimonial/TestimonialList/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <!-- Name Surname -->
                    <div class="space-y-2">
                        <label for="NameSurname" class="block text-sm font-semibold text-slate-300">
                            Ad Soyad
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">person</span>
                            <input type="text"
                                   id="NameSurname"
                                   name="NameSurname"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Ahmet Yılmaz"
                                   required />
                        </div>
                    </div>

                    <!-- Title -->
                    <div class="space-y-2">
                        <label for="Title" class="block text-sm font-semibold text-slate-300">
                            Unvan / Pozisyon
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">badge</span>
                            <input type="text"
                                   id="Title"
                                   name="Title"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: CEO, Proje Yöneticisi"
                                   required />
                        </div>
                    </div>

                    <!-- Comment -->
                    <div class="space-y-2">
                        <label for="Comment" class="block text-sm font-semibold text-slate-300">
                            Yorum
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-4 material-symbols-outlined text-slate-500" style="font-size: 20px;">comment</span>
                            <textarea id="Comment"
                                      name="Comment"
                                      rows="6"
                                      class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                                      placeholder="Referans yorumunu buraya yazın..."
                                      required></textarea>
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Kişinin sizin hakkınızda verdiği referans yorumunu yazın.</p>
                    </div>

                    <!-- Image URL -->
                    <div class="space-y-2">
                        <label for="ImageUrl" class="block text-sm font-semibold text-slate-300">
                            Görsel URL
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">image</span>
                            <input type="url"
                                   id="ImageUrl"
                                   name="ImageUrl"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="https://example.com/image.jpg"
                                   required />
                        </div>
                        <p class="text-xs text-slate-500 mt-1">Kişinin profil fotoğrafının URL adresini girin.</p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Referansı Kaydet
                        </button>
                        <a href="/Testimonial/TestimonialList/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Help Card -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">İpucu</h4>
                    <p class="text-xs text-slate-400">
                        Referanslar, potansiyel işverenlere veya müşterilere güven verir.
                        Kişinin tam adını, unvanını ve size dair olumlu görüşlerini eksiksiz bir şekilde girin.
                        Profil fotoğrafı için güvenilir bir URL kullanın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>