@model List<ResumeProjectDemoNight.Entities.Testimonial>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Referans Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Referanslarla ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Testimonial/CreateTestimonial/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Referans Girişi
            </a>
        </div>
        <!-- Testimonials Table Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-900/50">
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Görsel</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Ad Soyad</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Unvan</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Yorum</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Sil</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-800/30 transition-colors group">
                                <td class="px-6 py-5">
                                    <span class="text-slate-300 font-medium">@item.TestimonialId</span>
                                </td>
                                <td class="px-6 py-5">
                                    <div class="flex items-center">
                                        <img src="@item.ImageUrl"
                                             alt="@item.NameSurname"
                                             class="w-12 h-12 rounded-full object-cover border-2 border-slate-700"
                                             onerror="this.src='https://via.placeholder.com/48'" />
                                    </div>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-300 font-medium">@item.NameSurname</span>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-400 text-sm">@item.Title</span>
                                </td>
                                <td class="px-6 py-5">
                                    <span class="text-slate-400 text-sm line-clamp-2">@item.Comment</span>
                                </td>
                                <td class="px-6 py-5">
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId"
                                       class="inline-flex items-center gap-1 text-red-400 hover:text-red-300 transition-colors text-sm font-medium">
                                        <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                        Sil
                                    </a>
                                </td>
                                <td class="px-6 py-5">
                                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId"
                                       class="inline-flex items-center gap-1 text-primary hover:text-primary/80 transition-colors text-sm font-medium">
                                        <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Pagination / Footer -->
            <div class="px-6 py-4 bg-slate-900/30 flex items-center justify-between border-t border-slate-800">
                <span class="text-slate-500 text-xs font-medium uppercase tracking-wider">Toplam @Model.Count Adet Referans Listeleniyor</span>
                <div class="flex gap-2">
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Önceki</button>
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Sonraki</button>
                </div>
            </div>
        </div>
    </div>
</div>

